{% set url = path('annonces_show' , {'slug' : annonce.slug}) %}
<div class="col-md-4">
	<div class="card bg-light mb-3">
		<div class="card-header text-center">
			{{ annonce.rooms }} chambres, <strong>{{ annonce.price }}&euro; / nuit</strong><br>
			<small>Pas encore not√©</small>
		</div>
		
		<a href="{{ url }}"><img src="{{ annonce.coverImage }}" alt="Image de l'appartement"
		                         style="height: 200px; width: 100%; display: block;"></a>
		<div class="card-body">
			<h4 class="card-title"><a href="{{ url }}">{{ annonce.title }}</a></h4>
			<p class="card-text">{{ annonce.introduction }}</p>
			<a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>
		</div>
	</div>
</div>